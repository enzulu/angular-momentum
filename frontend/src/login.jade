html(ng-app="Momentum")
  head
    title TutorKo
  
    // import the bootstrap stylesheets
    link(href='/lib/bootstrap/css/bootstrap.css', rel='stylesheet')
    link(href='/lib/bootstrap/css/bootstrap-responsive.css', rel='stylesheet')

    // import the css styles we created in the /css/ folder
    link(href='/css/tutorko_styles.css', rel='stylesheet')

    // import the jquery, bootstrap, and Angular JS libraries
    script(src='/lib/jquery-1.9.1.js') 
    script(src='/lib/bootstrap/js/bootstrap.js')
    script(src='/lib/angular-1.1.5/angular.js')
    
    // import the javascript code we created in the /js/ folder
    script(src='/js/app.js', type='text/javascript')
    script(src='/js/message.js', type='text/javascript')
    script(src='/js/directives.js', type='text/javascript')
  
  body
    //navigation bar
    div.navbar.navbar-fixed-top
      div.navbar-inner
        div.container
          button(type="button", class="btn btn-navbar", data-toggle="collapse", data-target=".nav-collapse")
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(class="brand", href="#") TutorKo
          div.nav-collapse.collapse
            ul.nav
              li.active
                a(href="#") Home
              li
                a(href="#about") About
              li
                a(href="#contact") Contact

    div.row-fluid
      div.container
        div.hero-unit
          h1.text-center TutorKo.ph
          p.text-center Great minds stick together!
          p.text-center
            a.btn.btn-primary.btn-large Learn More

      div.container
        div.row-fluid
          div.span4.offset1
            form.form-signin
              h2.form-signin-heading.text-center Are you a Tutor?
            input(type="text", class="input-block-level", placeholder="Email address")
            input(type="password", class="input-block-level", placeholder="Password")
            label.checkbox Remember me
              input(type="checkbox", value="remember-me") 
            button(type="submit", class="btn btn-large btn-primary") Sign in as Tutor

          
          div.span4.offset2
          
            form.form-signin
              h2.form-signin-heading.text-center Looking for a Tutor?
            input(type="text", class="input-block-level", placeholder="Email address")
            input(type="password", class="input-block-level", placeholder="Password")
            label.checkbox Remember me
              input(type="checkbox", value="remember-me") 
            button(type="submit", class="btn btn-large btn-primary") Sign in as Tutee

            


              
